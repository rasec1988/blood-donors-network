<div class="row">	
	<div class="col-md-6 col-md-offset-3" style="background-color:#eee;border-radius:10px;margin-top:20px;padding:20px 20px;">		
		<a class="btn btn-sm btn-primary" href="<%= donors_path %>">Back</a>
		<form class="form-horizontal" role="form">
			<div class="form-group">
				<label class="col-sm-4 control-label">Name: </label>
				<div class="col-sm-8">
					<label class="col-sm-8 control-label" style="text-align:left;"><%= @donor.name %></label>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Blood Type: </label>
				<div class="col-sm-8">
					<label class="col-sm-8 control-label" style="text-align:left;"><%= @donor.blood_type %></label>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Location: </label>
				<div class="col-sm-8">
					<label class="col-sm-8 control-label" style="text-align:left;"><%= @donor.location %></label>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Contact Info: </label>
				<div class="col-sm-8">
					<label class="col-sm-8 control-label" style="text-align:left;"><%= @donor.contact_info %></label>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Occupation: </label>
				<div class="col-sm-8">
					<label class="col-sm-8 control-label" style="text-align:left;"><%= @donor.occupation %></label>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Last Donated: </label>
				<div class="col-sm-8">
					<label class="col-sm-8 control-label" style="text-align:left;"><%= @donor.last_donated %></label>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-4 control-label">Notes: </label>
				<div class="col-sm-8">
					<label class="col-sm-8 control-label" style="text-align:left;"><%= @donor.notes %></label>
				</div>
			</div>			
		</form>
	</div>
</div>